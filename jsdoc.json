{
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "README.md",
        "recurse": true,
        "verbose": true
    },
    "tags": {
        "allowUnknownTags": ["optional", "category", "warning"]
    },
    "plugins": [
        "node_modules/better-docs/typescript"
    ],
    "source": {
        "include": ["./packages/core/src"],
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    }
}
